{#                                                    <i class="fa fa-times"></i>#}
{#                                                </a>#}
{#                                            {% endif %}#}


                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
